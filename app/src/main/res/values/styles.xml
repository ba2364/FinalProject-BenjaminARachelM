<resources>

    <style name="main" parent="Theme.AppCompat.Light.DarkActionBar" topic="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent" topic="colorAccent">@color/accentColor</item>
    </style>

    <style name="EditTextStyle" topic="EditTextStyle"> 
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:textSize">20sp</item> 
        <item name="android:textColor" topic="android:textColor">@android:color/black</item> 
    </style>

    <style name="TextViewStyle" topic="TextViewStyle">
        <item name="android:layout_width" topic="android:layout_width">match_parent</item> 
        <item name="android:layout_height" topic="android:layout_height">wrap_content</item> 
        <item name="android:gravity" topic="android:gravity">center</item>
        <item name="android:textSize" topic="android:textSize">20sp</item> 
        <item name="android:textColor" topic="android:textColor">@android:color/black</item> 
    </style>

    <style name="EditWelcomeStyle" topic="EditWelcomeStyle">
        <item name="android:layout_width" topic="android:layout_width">wrap_content</item> 
        <item name="android:layout_height" topic="android:layout_height">wrap_content</item> 
        <item name="android:layout_gravity" topic="android:layout_gravity">center</item>
        <item name="android:textSize" topic="android:textSize">20sp</item> 
        <item name="android:textColor" topic="android:textColor">@color/primaryColor</item>
        <item name="android:textColorHint">@color/accentColor</item>
    </style>

    <style name="ButtonStyle" topic="ButtonStyle">
        <item name="android:layout_width" topic="android:layout_width">180sp</item> 
        <item name="android:layout_height" topic="android:layout_height">wrap_content</item> 
        <item name="android:layout_gravity" topic="android:layout_gravity">center</item>
        <item name="android:padding" topic="android:padding">5dp</item>
        <item name="android:textSize" topic="android:textSize">16sp</item> 
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/accentColor</item>
    </style>
    <style name="CardTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>
</resources>
